<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vainqueur"
            android:fontFamily="@font/yatra_one"
            android:textSize="35sp"
            android:textColor="@color/couleur_secondaire"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/image_trophe"
            android:layout_marginVertical="20dp"
            />

    <ImageView
            android:id="@+id/image_trophe"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/trophe"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/layout_btn_dialog"
            />

    <TextView
            android:id="@+id/text_vainqueur_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yatra_one"
            android:textSize="30sp"
            android:textColor="@color/couleur_secondaire"
            android:textStyle="bold"
            android:text="@string/joueur_blanc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_trophe"
            app:layout_constraintBottom_toTopOf="@+id/layout_btn_dialog"
            android:layout_marginVertical="20dp"
            />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_btn_dialog"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/text_vainqueur_dialog"
            app:layout_constraintBottom_toBottomOf="parent"
            >

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>